<div class="container">
  <div class="text-center">
    <h1><%= @cocktail.name %></h1>
    <div class="row">
      <div class="col-xs-6">
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="col-xs-6">
      <h3>Doses:</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
            <%= dose.description %> <%= dose.ingredient.name %>
            <%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info"%>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a dose to #{@cocktail.name}", new_cocktail_dose_path(@cocktail) %>
      </div>
    </div>
  </div>
</div>

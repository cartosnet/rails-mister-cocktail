<div class="container">
<h1 class= "text-center">Add the dose</h1>
  <div class="row">
   <div class="col-xs-offset-4 col-xs-4">
     <div class="new-doses">
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: Ingredient.all %>
        <%= f.submit %>
      <% end %>
      </div>
    </div>
  </div>
</div>
